{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@hooks/*": ["src/hooks/*"],
      "@providers/*": ["src/providers/*"],
      "@modals/*": ["src/modals/*"],
      "@datatables/*": ["src/datatables/*"],
      "@functions": ["src/functions.js"],
      "@config": ["src/confifg.js"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "additional.d.ts",
    "src/types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
